dialect = ansi

format {
	compact = false
	remspace = true
	comment = keep
	newline = lf
	upperize = keyword
	rewrite = use_std_op
	rewrite = subquery_as_cte
	rewrite = missing_cte_alias
}

format indent {
	space = true
	count = 3
}

format syntax {
	as       = true
	comma    = before
	quote    = false
}